<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_32"
            android:background="@drawable/bg_r12_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="600:646">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black63"
                android:text="隐私政策"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_25"
                android:drawablePadding="@dimen/dp_m_6"
                android:drawableBottom="@drawable/bg_bottom_agreement_title"
                android:textSize="@dimen/sp_20"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20">

                <TextView
                    android:id="@+id/content_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:textColor="@color/black63"
                    android:text=""/>

            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/agree_textView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_20"
                android:gravity="center"
                android:text="同意"
                android:background="@drawable/bg_r12_theme"/>

            <TextView
                android:id="@+id/refuse_textView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black66"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:text="不同意并退出APP"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>