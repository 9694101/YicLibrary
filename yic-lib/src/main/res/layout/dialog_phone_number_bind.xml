<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.yic3.lib.widget.RatioLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@mipmap/bg_phone_number_bind_dialog"
        app:width_height_ratio="0.777">

        <EditText
            android:id="@+id/phone_editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="@drawable/bg_r30_white"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:hint="请输入手机号"
            android:paddingStart="@dimen/dp_23"
            android:paddingEnd="@dimen/dp_23"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black63"
            android:textColorHint="#A7A7A7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center_vertical"
            android:background="@drawable/bg_r30_white">

            <EditText
                android:id="@+id/code_editText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black63"
                android:textColorHint="#A7A7A7"
                android:paddingStart="@dimen/dp_23"
                android:paddingEnd="@dimen/dp_23"
                android:background="@color/transparent"
                android:hint="请输入验证码"
                android:inputType="number"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_15"
                android:background="#747272"/>

            <com.yic3.lib.widget.ZZCountDownButton
                android:id="@+id/code_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/theme_color"
                android:text="获取验证码"
                android:textSize="@dimen/sp_12"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_23"/>

        </LinearLayout>
        
        <TextView
            android:id="@+id/bind_textView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="立即绑定"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_26"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/bg_login_button"/>

    </com.yic3.lib.widget.RatioLinearLayout>

</layout>