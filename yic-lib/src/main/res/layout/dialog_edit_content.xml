<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/content_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_r12_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minHeight="106dp"
            android:minWidth="300dp"
            android:gravity="center">

            <TextView
                android:id="@+id/message_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_24"
                android:paddingRight="@dimen/dp_16"
                android:includeFontPadding="false"
                android:textColor="@color/black63"
                android:textStyle="bold"
                android:text="重命名"
                android:textSize="@dimen/sp_15"
                android:visibility="visible" />

            <EditText
                android:id="@+id/content_editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/bg_r8_theme_w1"
                android:layout_margin="@dimen/dp_24"
                android:textSize="@dimen/sp_16"
                android:textColorHint="@color/black69"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:gravity="center_vertical"
                android:lines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black63"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black63"
                android:textSize="17sp" />

            <View
                android:id="@+id/message_divider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/message_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/theme_color"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>

</layout>