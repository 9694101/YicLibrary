<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginEnd="@dimen/dp_26"
            android:orientation="vertical"
            android:background="@drawable/bg_r12_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="323:218">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销账号"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_36"
                android:text="账户注销后不可找回，会员状态与数据都将丢失，是否确定注销?"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:paddingStart="@dimen/dp_9"
                android:paddingEnd="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_30">

                <TextView
                    android:id="@+id/confirm_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/black69"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:text="确定注销"
                    android:layout_marginStart="@dimen/dp_9"
                    android:layout_marginEnd="@dimen/dp_9"
                    android:gravity="center"
                    android:background="@drawable/bg_r30_f0"/>

                <TextView
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:text="取消"
                    android:layout_marginStart="@dimen/dp_9"
                    android:layout_marginEnd="@dimen/dp_9"
                    android:gravity="center"
                    android:background="@drawable/bg_r30_597eff"/>

            </LinearLayout>
            
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>